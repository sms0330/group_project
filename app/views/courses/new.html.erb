<h1 style="text-align: center;"><b>Create a course</b></h1>
<%= form_for @course do |c| %>
<div class="courses-new-div">
    <div class="courses-new-text-fields">
        <%= c.label :name %> <br>
        <%= c.text_field :name %> <br> <br>
    
        <%= c.label :category %> <br>
        <%= c.text_field :category %> <br> <br>

        <%= c.label :course_code %> <br>
        <%= c.text_field :course_code %> <br> <br>
    
        <%= c.label :description %> <br> 
        <%= c.text_field :description %> <br> <br>
    
        <%= c.label :seats %> <br>
        <%= c.text_field :seats %> <br> <br>
    
        <%= c.label :start_date %> <br>
        <%= c.date_field :start_date %> <br> <br>
    
        <%= c.label :end_date %> <br>
        <%= c.date_field :end_date %> <br> <br>

        <%= c.label :time_start %>
        <%= c.time_field :time_start %> <br> <br>

        <%= c.label :time_end %>
        <%= c.time_field :time_end %> <br> <br>
    
    <%= c.submit "Create Course", :class => "btn btn-danger" %>
    <% end %>
</div>
</div>