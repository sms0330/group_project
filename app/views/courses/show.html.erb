    <div class="courses-show-div">
        <div class="courses-show-info">
            
            <h2 style="text-transform: capitalize;"><b><%= @course.name %></b></h2>
            <hr>
            
    
            <h3> Course code: </h3>
    
            <p> About: <%= @course.description %></p>
            <hr>
            
    
            <p> Number of People Enrolled: </p>
            <p> Seats available: <b><%= @course.seats %></b></p>
            <hr>
            
    
            <small> Timing of the Class:</small> <br>
            <b><%= @course.time %></b> <br>
            <hr>

            <small> Course start and end date:</small> <br>
            <b><%= @course.start_date %> - <%= @course.end_date %></b> <br>
            <hr>
    
            Created by: <b><%= @course.user&.full_name || "Deleted" %></b> <br>
            <small> Teacher info: </small> <br>
            <hr>
            <% @enroll = @course.enrolls.find_by(user: current_user) %>
                <% if current_user && current_user.is_teacher == false %>
                    <% if @enroll.present? %>
                        <%= button_to 'Unenroll', enroll_path(@enroll), method: :delete %>
                    <% else %> 
                        <%= button_to 'Enroll', course_enrolls_path(@course), method: :post %>
                    <% end %>
                <% end %>
            
                <% if can? :crud, @course %>
                    <%= link_to "Edit" , edit_course_path(@course), class: "btn btn-outline-primary" %>
                        <% end %>
                            <% if can? :crud, @course %>
                                <%= link_to "Delete" , course_path(@course.id), class: "btn btn-outline-primary" , method:
                                    :delete, data: {confirm: "Are you sure you want to delete the course?" }%>
                                    <% end %>
                                    
        </div>
    </div> 
