<%= link_to "New course", new_course_path %>
<hr style="color: white">
<% @courses.each do |course| %>

    <div>
        <h2> <%= course.title %> </h2> 
        <%= link_to "edit", edit_course_path(course) %>
        <%= link_to "delete", course_path(course),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
    </div>
    <hr>

<% end %>
